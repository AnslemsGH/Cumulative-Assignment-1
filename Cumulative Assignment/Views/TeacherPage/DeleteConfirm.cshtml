@model Cumulative_Assignment.Models.Teacher
<style>
    body {
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #cc0000;
    }

    p {
        margin: 10px 0;
        font-size: 16px;
    }

    a {
        display: inline-block;
        margin-right: 15px;
        color: #0066cc;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    input[type="submit"] {
        background-color: #cc0000;
        color: white;
        padding: 6px 12px;
        border: none;
        cursor: pointer;
        border-radius: 4px;
    }

    input[type="submit"]:hover {
        background-color: #a30000;
    }
</style>

<h2>Are you sure you want to delete this Teacher from the records?</h2>
<p>Teacher Name: @Model.TeacherFName</p>

<a href="/TeacherPage/Show/@Model.TeacherId">No, Go back</a>

<form method="POST" action="/TeacherPage/Delete/@Model.TeacherId">
	<input type="submit" value="Yes, Delete" />
</form>