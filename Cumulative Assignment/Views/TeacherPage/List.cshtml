@model IEnumerable<Cumulative_Assignment.Models.Teacher>
<style>
    body {
        font-family: Arial, sans-serif;
    }

    h1 {
        color: #333;
    }

    a {
        color: #0066cc;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    form {
        margin: 10px 0;
    }

    input[type="text"] {
        padding: 5px;
    }

    input[type="submit"] {
        padding: 5px 10px;
        background-color: #0066cc;
        color: white;
        border: none;
        cursor: pointer;
    }

    input[type="submit"]:hover {
        background-color: #004999;
    }

    .teacher-item {
        margin: 5px 0;
    }
</style>


<h1>Teacher Details</h1>

<a href="/TeacherPage/New">Add a Teacher</a>

<form method="GET" action="/TeacherPage/List">
	<div>
	<input type="text" name="SearchKey" /><input type="submit" value="Search" />
	</div>
</form>

@foreach(Teacher teacher in Model)
{
	<div>
		<a href="/TeacherPage/Show/@teacher.TeacherId">@teacher.TeacherFName</a>
	</div>
}
